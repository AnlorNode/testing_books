    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "book",
            "runtimeArgs": ["--trace-warnings", "-r", "dotenv/config"],
            "cwd": "${workspaceFolder}",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/index.js",
            "outFiles": ["${workspaceFolder}/src/**/*.js"],
            "outputCapture": "std",
            "console": "integratedTerminal",
            "env": {}
        }
    ]
}
